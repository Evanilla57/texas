<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{userName}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="title">blog name:</label>
        <input class="form-input" type="text" id="title" name="contents" />
      </div>
      <div class="form-group">
        <label for="contents">description:</label>
        <textarea class="form-input" id="contents" name="contents"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if post.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Projects:</h3>

{{!-- TODO: check route --}}
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/dashboard/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/blog.js"></script>